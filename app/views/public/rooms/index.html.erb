<% @another_entries.each do |entry| %>
  <%= link_to room_path(entry.room) do %>
    <div class="card">
      <div class="card-body">
        <div>
          <div class="d-flex">
            <div class="chat-avatar">
              <object>
                <%= link_to user_path(entry.user) do %>
                  <%= "画像" %>
                <% end%>
              </object>
              <div class="chat-user-name">
                <%= entry.user.name %>
              </div>
            </div>
          </div>
          chat-text
            <%= Message.find_by(id: entry.room.message_ids.last)&.body %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

