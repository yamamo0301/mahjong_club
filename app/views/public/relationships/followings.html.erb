<div class="container">

  <div class="row">
    <div class="col-3">
      <h2 class="fw-bold">友人一覧</h2>
    </div>
    <div class="col-2">
      <h4><%= link_to "フォロワー一覧", user_followers_path %></h4>
    </div>
    <div class="col-2">
      <h4><%= link_to "友人を作る", users_path %></h4>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>アイコン</th>
        <th>会員名</th>
        <th>都道府県</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
      <tr>
        <td>
          <%= image_tag user.get_icon(40,40), class: "border border-dark rounded-circle" %>
        </td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.prefecture.name %></td>
        <td>
          <div>
            <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-warning" %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>