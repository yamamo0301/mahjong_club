<div>
  <h2 class="fw-bold">プレイヤー一覧</h2>
</div>

<table class="table">
  <thead>
    <tr>
      <th>プレイヤー名</th>
      <th></th>
    </tr>
  </thead>
  <% players.each do |player| %>
  <tbody>
    <tr>
      <td><%= player.name %></td>
      <td><%= link_to "編集", edit_player_path(player.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>