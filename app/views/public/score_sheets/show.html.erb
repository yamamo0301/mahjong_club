<div class="container">
  <div class="row">
    <h2 class="fw-bold">スコアシート詳細</h2>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <h4><%= @score_sheet.created_at.strftime("%Y-%m-%d") %>作成</h4>
      <div>
        <%= link_to "編集画面へ", edit_score_sheet_path(@score_sheet), class: "btn btn-outline-success" %>
      </div>
    </div>
    <div class="col-5">
      <table class="table table-bordered table-success table-striped text-center">
        <tbody>
          <tr class="table-warning">
            <th>適応ルール</th>
            <th><%= @score_sheet.rule.name %></th>
          </tr>
          <tr>
            <th>チップポイント</th>
            <td><%= @score_sheet.rule.tip_point %>P</td>
          </tr>
          <tr>
            <th>テーブルポイント(TP)</th>
            <td><%= @score_sheet.rule.table_point %>P</td>
          </tr>
          <tr>
            <th>TP計算方法</th>
            <td><%= @score_sheet.rule.calculation_status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <div class="row card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title">コメント:</h5>
          <p class="card-text text-center">
            <%= @score_sheet.comment %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr class="text-center table-warning">
          <% @score_sheet.sheets.order(created_at: :desc).each do |sheet| %>
            <th colspan="3"><%= sheet.player.name %></th>
          <% end %>
        </tr>
        <tr>
          <th colspan="3">
            <%= render 'table', score_sheet: @score_sheet, player: @player1 %>
          </th>
          <th colspan="3">
            <%= render 'table', score_sheet: @score_sheet, player: @player2 %>
          </th>
          <th colspan="3">
            <%= render 'table', score_sheet: @score_sheet, player: @player3 %>
          </th>
          <th colspan="3">
            <%= render 'table', score_sheet: @score_sheet, player: @player4 %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>

</div>