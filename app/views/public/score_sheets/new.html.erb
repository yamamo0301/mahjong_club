<h2>スコアシート作成</h2>

<%= form_with model: [@score_sheet, @sheet_form], url: score_sheets_path, method: :post do |f| %>
  <h3>メンバー選択</h3>
    <%= f.fields_for :sheets do |i| %>
      <%= i.select :player_id, options_from_collection_for_select(current_user.players.all, :id, :name), {prompt: '選択してください'}, {class: ""} %>
    <% end %>

  <h3>ルール選択</h3>
    <%= f.select :rule_id, options_from_collection_for_select(current_user.rules.all, :id, :name), {prompt: '選択してください'}, {class: ""}%>

  <%= f.submit "作成" %>
<% end %>