<div class="container">

  <div class="row text-center">
    <h2 class="fw-bold">ログイン画面</h2>
  </div>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <p>
          <%= f.label :email, "メールアドレス", class: "fw-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </p>
        <p>
          <%= f.label :password, "パスワード", class: "fw-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </p>
        <% if devise_mapping.rememberable? %>
          <p>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を維持する" %>
          </p>
        <% end %>
        <div class="text-center d-grid gap-2">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row text-center">
    <%= render "public/shared/links" %>
  </div>

</div>
